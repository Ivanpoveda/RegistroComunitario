@model IEnumerable<RegistroComunitario.Models.Vecino>

<h2>Lista de Vecinos Registrados</h2>

<a asp-action="Crear" class="btn btn-success">Nuevo Registro</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Género</th>
            <th>Edad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Id</td>
                <td>@v.Nombre</td>
                <td>@v.Apellidos</td>
                <td>@v.Telefono</td>
                <td>@v.Correo</td>
                <td>@v.Genero</td>
                <td>@v.Edad</td>
            </tr>
        }
    </tbody>
</table>
